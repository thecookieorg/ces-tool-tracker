<%= render 'dashboards/nav' %>

<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <h1>CES Tool Tracker</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
       <p id="notice"><%= notice %></p>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Tool name</th>
      <th>Person name</th>
      <th>Date out</th>
      <th>City</th>
      <th>Date in</th>
      <th>Comments</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tools.each do |tool| %>
      <tr>
        <td><%= tool.tool_name %></td>
        <td><%= tool.person_name %></td>
        <td><%= tool.date_out_text %></td>
        <td><%= tool.city %></td>
        <td><%= tool.date_in_text %></td>
        <td><%= tool.comments %></td>
        <td>
            <p><%= link_to edit_tool_path(tool), class:"btn-sm btn-warning" do %> <i class="fa fa-pencil-square-o"></i> Update <% end %></p>
            <p><% if current_user.admin? %> <%= link_to tool, method: :delete, class:"btn-sm btn-danger", data: { confirm: 'Are you sure you want to delete this tool?' } do %> <i class="fa fa-trash-o"></i> Delete <% end %> <% end %></p>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin? %>
  <%= link_to new_tool_path, class:"btn btn-success" do %>
      <i class="fa fa-plus"></i> Add Tool
  <% end %>
<% end %>

    </div>
</div>
